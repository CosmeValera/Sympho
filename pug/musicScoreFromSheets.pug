each sheet in sheets
    div(class="card col-md-6 my-2 mb-50 shadow-sm")
      div(class="card-body")
        p(class="d-none this-is-id")= `${sheet._id}`
        h4(class="card-title")=`Score name: ${sheet.nombre}`
        p(class="card-text")=`Score author: ${sheet.compositor}`
        p(class="card-text")=`Instrument: ${sheet.instrumento}`
      div(class="card-footer d-flex justify-content-between")
        a(href="#" class="btn btn-danger btn-remove-sheet" data-type="remove")= "Remove"
        a(href="#" class="btn btn-primary btn-edit-sheet" data-type="edit")= "Edit"